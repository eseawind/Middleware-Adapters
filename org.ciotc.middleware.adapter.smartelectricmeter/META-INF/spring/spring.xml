<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/osgi 
    http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<!--  Create Reader Configuration Factory -->
	<bean id="SmartElectricMeterSensorFactory" class="org.ciotc.middleware.adapter.smartelectricmeter.SmartElectricMeterSensorFactory">
		<property name="context" ref="bundleContext" />
		<property name="notifierService" ref="JMSNotifierService" />
	</bean>
	
	<!-- Put reader configuration service in OSGi registry -->
	<osgi:service id="SmartElectricMeterSensorFactoryService" ref="SmartElectricMeterSensorFactory">
		<osgi:interfaces>
			<value>org.ciotc.middleware.configuration.ServiceFactory</value>
			<value>org.ciotc.middleware.sensors.AbstractSensorFactory</value>
		</osgi:interfaces>
	</osgi:service>
	
	<osgi:reference id="JMSNotifierService" interface="org.ciotc.middleware.notification.NotifierService"/>
	
</beans>